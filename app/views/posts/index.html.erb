<p id="notice"><%= notice %></p>
<div class="container-fluid text-center">
  <h1 class="title page-header">Posts</h1>
    <% @posts.each do |post| %>
      <div class="row">
        <div class="text-left col-md-6 col-md-offset-3 index-post">
          <h1><%= post.title %></h1>
          <p><%= post.body %></p>
          <% if user_signed_in? %>
            <p><%= post.user.name %></p>
          <% end %>
          <%= link_to 'Show', post %>
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    <% end %>
</div>